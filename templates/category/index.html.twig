{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <a class="btn btn-primary" href="{{ path('app_quiz_index') }}">Quiz index</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Count</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.quizzes.count }}</td>
                <td>
                    <a class="btn btn-secondary"  href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-primary"  href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                    <a class="btn btn-success" href="{{ path('app_quiz_mcq',  {
                        category: category.id
                    }) }}">Test</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Create new</a>
{% endblock %}
