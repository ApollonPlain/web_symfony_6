{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}

    <div class="row px-5">
        <div class="col-12 center py-3 form-group">Question :
            <textarea class="form-control" style="min-height: 150px">{{ quiz.question }}</textarea>
        </div>
        <br />


        {% if goodResponse is defined and goodResponse is not null %}

            {% if goodResponse %}
                <p class="text-success">Correct</p>
            {% else %}
                <p class="text-danger">Wrong</p>

            {% endif %}

        {{ quiz.sources }}

        {% endif %}

        <input name="{{ key }}-id" value="{{ quiz.id }}" class="d-none">
        {% for answer in answers %}
            <div class="col-md-12 py-2 px-5">
                <label>
                    <input name="{{ key }}-{{ answer.id }}" id="{{ answer.id }}" type="checkbox">  {{ answer.answer }}
                </label>

            </div>
        {% endfor %}
        <div class="col-2"></div>




    </div>

{% endblock %}
